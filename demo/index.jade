    script(src='../bower_components/checklist-model/checklist-model.js')
    script(src='../bower_components/angular-ui-select/dist/select.js')
    script(src='../bower_components/textAngular/dist/textAngular.min.js')
    script(src='../bower_components/angular-sanitize/angular-sanitize.js')
    script(src='../bower_components/angular-elastic/elastic.js')
    script(src='../bower_components/angular-bootstrap/ui-bootstrap-tpls.js')
    // endbower

    script(src='//code.jquery.com/jquery-2.1.1.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    script(src='../dist/angular-easy-form.js')
    script(src='demo.js')
